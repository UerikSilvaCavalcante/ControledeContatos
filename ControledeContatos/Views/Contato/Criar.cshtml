@model ContatoModel
@{
    ViewData["Title"] = "Cadastrar Contato";
}

<div class="text-center">
    <h1>Cadastrar contato</h1>
</div>

<form asp-controller="Contato" asp-action="Criar" method="post">
    
    <div class="mb-3">
        <label for="nome" class="form-label">Nome</label>
        <input type="text" asp-for="Nome" class="form-control input" placeholder="Digite o nome do contato">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">E-mail</label>
        <input type="email" asp-for="Email" class="form-control input" placeholder="Digite o e-mail do contato">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="mb-3">
        <label for="Telefone" class="form-label">Telefone</label>
        <input type="tel" asp-for="Celular" class="form-control input" placeholder="Digite o Telefone do contato">
        @Html.ValidationMessageFor(x => x.Celular)
    </div>

    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-primary btn-block">Adicionar</button>
        <a role="button" class="btn btn-secondary btn-block" asp-controller="Contato" asp-action="Index">Voltar</a>
    </div>
</form>